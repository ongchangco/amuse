<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MuseumNavigator"
    android:background="@color/GrayBlue">
    <Toolbar
        android:id="@+id/navBar"
        android:layout_width="381dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_corner"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/menu_buttton" />
    </Toolbar>

    <Button
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:layout_marginEnd="228dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/Transparent"
        android:outlineAmbientShadowColor="@color/Transparent"
        android:outlineSpotShadowColor="@color/Transparent"
        android:shadowColor="@color/Transparent"
        android:text="QR"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/navBar"
        app:layout_constraintEnd_toEndOf="@+id/navBar"
        app:layout_constraintTop_toTopOf="@+id/navBar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/museumInfo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/Juniper">
        <TextView
            android:id="@+id/txtMuseumName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtMuseumName"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/txtMuseumDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtMuseumDesc"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textSize="23sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtMuseumName"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>